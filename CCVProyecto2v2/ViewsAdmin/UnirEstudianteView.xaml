<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:CCVProyecto2v2.Dto"
             x:Class="CCVProyecto2v2.ViewsAdmin.UnirEstudianteView">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Picker Title="Seleccione una Clase" TextColor ="Black" TitleColor="Black" FontSize="16" FontFamily="TheStudentsTeacherFont" ItemsSource="{Binding ClasesDisponibles} " 
                    SelectedIndexChanged="OnClaseSelected" ItemDisplayBinding="{Binding Nombre}"/>
            <Picker Title="Seleccione un Estudiante" FontSize="16" TextColor ="Black" TitleColor="Black" FontFamily="TheStudentsTeacherFont" ItemsSource="{Binding EstudiantesSeleccionados}" 
                    SelectedIndexChanged="OnEstudianteSelected" ItemDisplayBinding="{Binding Nombre}" />

            <Button Text="Unir"
                    BackgroundColor="Black"
                    TextColor="White"
                    Command="{Binding CrearClaseEstudianteCommand}"
                    Margin="0,0,0,10" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
