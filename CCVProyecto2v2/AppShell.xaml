<?xml version="1.0" encoding="UTF-8" ?>
<Shell

    x:Class="CCVProyecto2v2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CCVProyecto2v2.ViewsGeneral"
    Title="CCVProyecto2v2">
    
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid ColumnDefinitions="50,*,10"
                VerticalOptions="CenterAndExpand">
                <Image Source="{Binding FlyoutIcon}"
                       HeightRequest="60"
                       WidthRequest="60"
                       HorizontalOptions="Start"       
                       />
                <Label Grid.Column="1"
                       Text="{Binding Title}"
                       VerticalTextAlignment="Center"
                       FontAttributes="Bold"
                       FontSize="16"
                       TextColor="White" />
                
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <FlyoutItem Title="Inicio"  >
        <ShellContent ContentTemplate="{DataTemplate local:InicioView}" Route="InicioView" Icon="iconhome.png" />
    </FlyoutItem>

    <FlyoutItem Title="Soporte" >
        <ShellContent ContentTemplate="{DataTemplate local:SoporteView}" Route="SoporteView" Icon="iconsoporte.png"/>
    </FlyoutItem>
</Shell>