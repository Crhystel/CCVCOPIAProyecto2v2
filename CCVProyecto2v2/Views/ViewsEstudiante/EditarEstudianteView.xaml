<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CCVProyecto2v2.Views.ViewsEstudiante.EditarEstudianteView"
             xmlns:viewmodel="clr-namespace:CCVProyecto2v2.ViewModels">
    <ContentPage.BindingContext>
        <viewmodel:EstudianteViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20" Spacing="10">

            <Label Text="Editar Estudiante"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="Black" />
            <Label Text="Nombre:"
                    TextColor="Black"/>
            <Entry Placeholder="Nombre"
                   Text="{Binding Nombre}" 
                   HorizontalOptions="FillAndExpand"
                   TextColor="Black" />
            <Label Text=" Edad:"
                   TextColor="Black"/>

            <Entry Placeholder="Edad"
                   Text="{Binding Edad}" 
                   Keyboard="Numeric"
                   HorizontalOptions="FillAndExpand"
                   TextColor="Black" />
            <Label Text="Cedula:"
                   TextColor="Black"/>

            <Entry Placeholder="Cédula"
                   Text="{Binding Cedula}" 
                   HorizontalOptions="FillAndExpand"
                   TextColor="Black" />
            <Label Text="Nombre de Usuario:"
                   TextColor="Black"/>

            <Entry Placeholder="Nombre de Usuario"
                   Text="{Binding NombreUsuario}" 
                   HorizontalOptions="FillAndExpand"
                   TextColor="Black" />
            <Label Text="Contraseña:"
                   TextColor="Black"/>

            <Entry Placeholder="Contraseña"
                   Text="{Binding Contrasenia}" 
                   IsPassword="True"
                   HorizontalOptions="FillAndExpand"
                   TextColor="Black" />
            <Label Text="Grado:"
                    TextColor="Black"/>

            <Picker ItemsSource="{Binding GradosDisponibles}"
                    SelectedItem="{Binding Grado}"
                    HorizontalOptions="FillAndExpand"
                    Margin="10,0"
                    TextColor="Black"
                    BackgroundColor="White"/>

            <Button Text="Guardar Cambios"
                    Command="{Binding GuardarEstudianteCommand}"
                    BackgroundColor="Black"
                    TextColor="White"
                    HorizontalOptions="FillAndExpand" />


        </StackLayout>
    </ScrollView>
</ContentPage>