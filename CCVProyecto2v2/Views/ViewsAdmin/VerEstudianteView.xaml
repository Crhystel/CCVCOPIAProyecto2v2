<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CCVProyecto2v2.ViewsAdmin.AgregarEstudianteView"
             xmlns:viewmodel="clr-namespace:CCVProyecto2v2.ViewsModels">
    <ContentPage.BindingContext>
        <viewmodel:EstudianteViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <StackLayout Padding="10" Spacing="15">


            <Button x:Name="butonAgregar"
                    Text="Agregar Estudinate"
                    BackgroundColor="Black"
                    TextColor="White"
                    Clicked="butonAgregar_Clicked"/>


            <Label Text="Lista de Estudiantes" FontSize="24" HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Estudiantes}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" HorizontalOptions="FillAndExpand">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5" />
                            </Border.StrokeShape>
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*">
                                <Label Grid.Row="0" Grid.Column="0" 
                                       Text="Nombre:" 
                                       FontAttributes="Bold" 
                                       TextColor="Black" />
                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding Nombre}" 
                                       TextColor="Black" />

                                <Label Grid.Row="1" Grid.Column="0" 
                                       Text="Edad:" 
                                       FontAttributes="Bold" 
                                       TextColor="Black" />
                                <Label Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding Edad}" 
                                       TextColor="Black" />

                                <Label Grid.Row="2" Grid.Column="0" 
                                       Text="Grado:" 
                                       FontAttributes="Bold" 
                                       TextColor="Black" />
                                <Label Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding Grado}" 
                                       TextColor="Black" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ScrollView>
</ContentPage>
