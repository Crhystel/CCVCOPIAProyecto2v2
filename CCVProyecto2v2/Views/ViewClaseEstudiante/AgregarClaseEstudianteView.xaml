<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CCVProyecto2v2.Views.ViewClaseEstudiante.AgregarClaseEstudianteView"
            >
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="Unir estudiante a clase" 
           FontSize="24" 
           HorizontalOptions="Center" 
           TextColor="Black" />

            <Entry Placeholder="Clase Id" 
           Text="{Binding ClaseId}" 
           HorizontalOptions="FillAndExpand" 
           Margin="10,0"
           TextColor="Black" 
           PlaceholderColor="Gray" />

            <Entry Placeholder="Estudiante Id" 
           Text="{Binding EstudianteId}" 
           Keyboard="Numeric" 
           HorizontalOptions="FillAndExpand" 
           Margin="10,0"
           TextColor="Black" 
           PlaceholderColor="Gray" />

            <Button Text="Unir" 
            Command="{Binding CrearClaseEstudianteCommand}" 
            BackgroundColor="Black" 
            TextColor="White" 
            HorizontalOptions="FillAndExpand" 
            Margin="10,0" />


        </StackLayout>
    </ScrollView>
</ContentPage>